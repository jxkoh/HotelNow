<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hotelnow.hotelnow">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="sensorPortrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Webview"
            android:screenOrientation="sensorPortrait" />


        <!--Instagram Clone-->

        <!--Home-->
        <activity android:name=".FirebaseDiary.Home.HomeActivity">

        </activity>

        <!--Likes-->
        <activity android:name=".FirebaseDiary.Likes.LikesActivity"></activity>

        <!--Search-->
        <activity android:name=".FirebaseDiary.Search.SearchActivity"
            android:windowSoftInputMode="adjustNothing"></activity>

        <!--Share-->
        <activity android:name=".FirebaseDiary.Share.ShareActivity"></activity>
        <activity android:name=".FirebaseDiary.Share.NextActivity"></activity>

        <!--Profile-->
        <activity android:name=".FirebaseDiary.Profile.ProfileActivity"></activity>
        <activity android:name=".FirebaseDiary.Profile.AccountSettingsActivity"></activity>

        <!--Login-->
        <activity android:name=".FirebaseDiary.Login.LoginActivity"></activity>
        <activity android:name=".FirebaseDiary.Login.RegisterActivity"></activity>
        <activity android:name=".FirebaseDiary.Login.ResetPasswordActivity"></activity>

    <!--**********Review Activity**********-->
        <activity android:name=".ReviewActivity.account.LoginActivity"></activity>
        <activity android:name=".ReviewActivity.account.RegisterActivity"></activity>
        <activity android:name=".ReviewActivity.account.ResetPasswordActivity"></activity>
        <activity android:name=".ReviewActivity.FiltersActivity"></activity>
        <activity android:name=".ReviewActivity.SearchActivity"></activity>


    </application>

</manifest>